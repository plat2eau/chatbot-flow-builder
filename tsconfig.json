{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "declaration": true,
    "declarationDir": "./types",
    "resolveJsonModule": true
  }
}